@font-face
	font-family 'icomoon'
	src url('/assets/fonts/icomoon.eot?aggxqs')
	src url('/assets/fonts/icomoon.eot?aggxqs#iefix') format('embedded-opentype'),
				url('/assets/fonts/icomoon.ttf?aggxqs') format('truetype'),
				url('/assets/fonts/icomoon.woff?aggxqs') format('woff'),
				url('/assets/fonts/icomoon.svg?aggxqs#icomoon') format('svg')
	font-weight normal
	font-style normal

[class^="icon-"], [class*=" icon-"]
	font-family 'icomoon' !important
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.icon-facebook
	&:before
		content "\e900"

.icon-github
	&:before
		content "\e901"

.icon-google-plus
	&:before
		content "\e902"

.icon-linkedin
	&:before
		content "\e903"

.icon-mail
	&:before
		content "\e904"

.icon-skype
	&:before
		content "\e905"

.icon-eye
	&:before
		content "\e906"
