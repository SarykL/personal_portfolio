.projects-thumbnail
	display block
	cf()

	&__list
		display block
		cf()

	&__item
		display block
		position relative
		margin-bottom 30px
		overflow hidden
		+mobile()
			stack(1)
		+tablet()
			col(1/2, cycle: 2)
		+desktop()
			col(1/3, cycle: 3)


		&:hover
			.projects-thumbnail__overlay
				margin-top 0

	&__image
		max-width 100%
		max-height 100%

	&__overlay
		margin-top -400px
		position absolute
		text-align center
		left 0
		top 0
		width 100%
		height 100%
		transition .7s
		background rgba(88, 48, 39, .37)

	&__title
		font-size 1.75rem
		margin-top 70px
		color #fff

	&__link
		align(h)
		padding 15px 25px
		color #fff
		font-size .875rem
		font-weight 700
		bottom 20%
		text-transform uppercase
		text-decoration none
		border 2px solid #fff
		border-radius 5px
