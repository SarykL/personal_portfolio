.navigation
	display block
	text-align center
	+below(480px)
		display none
	padding-x(15px)

.navbar
	min-height 50px
	&__list
		&-item
			display inline-block
			&-link
				margin-x(10px)
				padding-y(10px)
				font-family 'Play'
				font-size .75rem
				font-weight 700
				line-height 3rem
				text-transform uppercase
				text-decoration none
				color #fff
				transition .25s
				&:hover
					border-bottom 3px solid #fff