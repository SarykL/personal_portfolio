/* ==========================================================================
   About-skills block styles
   ========================================================================== */


.about-skills
	position relative
	padding-x(10px)
	display block
	cf()
	+tablet()
		stack(1)
	+desktop()
		col(1/3)
		shift(1/12)
	+hd()
		col(2/7)
		shift(1/5)

	&__heading
		margin-bottom 10px
		font-size 1.25rem
		font-weight 700

	&__list
		list-style-position inside
		list-style-type disc
		font-size 1.125rem
		line-height 1.25rem
		+tablet()
			col(1/2)
			line-height 1.75rem
