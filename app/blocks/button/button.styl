/* ==========================================================================
   Buttons styles
   ========================================================================== */


.button
	display block
	font-size 1.125rem
	font-weight 700
	line-height 3rem
	text-align center
	text-decoration none
	color #fff
	background-color main-text-color
	border-radius 10px

	&_download
		margin-top 30px
		+tablet()
			col(1/2)
			position absolute
			right 0
			bottom 0
			text-align center
